{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}
{% block controller %}{{path('verificationClient')}}{% endblock %}

{% block erreur %}{{erreur}} {% endblock %}

{% block body %}
<div class="page-wrapper">
    <div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
        <div class="container-fluid">
        <div class="row">
        <div class="col-md-12" >
        <div class="card">
            <div class="card-header">
    <h1 style="display:flex">Client index<div>
        <form class="form-horizontal mx-5 col-md-9 d-flex p-2" action="{{path('verificationAge')}}"  method="post">
          <select class="form-control" name="Intervale-1" id="" style="">
            {% for i in range(0,9)%}
            <option value="{{196 ~ i}}">{{196 ~ i}}</option>
            {% endfor %}
            {% for i in range(0,9)%}
            <option value="{{200 ~ i}}">{{200 ~ i}}</option>
            {% endfor %}
            {% for i in range(0,9)%}
            <option value="{{201 ~ i}}">{{201 ~ i}}</option>
            {% endfor %}
            {% for i in range(0,9)%}
            <option value="{{202 ~ i}}">{{202 ~ i}}</option>
            {% endfor %}
          </select>
          <select class="form-control" name="intervale-2" id="">
            {% for i in range(0,9)%}
            <option value="{{196 ~ i}}">{{196 ~ i}}</option>
            {% endfor %}
            {% for i in range(0,9)%}
            <option value="{{200 ~ i}}">{{200 ~ i}}</option>
            {% endfor %}
            {% for i in range(0,9)%}
            <option value="{{201 ~ i}}">{{201 ~ i}}</option>
            {% endfor %}
            {% for i in range(0,9)%}
            <option value="{{202 ~ i}}">{{202 ~ i}}</option>
            {% endfor %}
          </select>
        
            
            <input type="submit" value="Valider" class="btn btn-primary">
          </form>
    </div></h1>
   
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Telephone</th>
                <th>NomUtilisateur</th>
                <th>MotDePass</th>
                <th>Age</th>
                <th>Cni</th>
                <th>PhotoIdentite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% set continue = false %}
        {% for client in clients %}
        {% if client.Age < intervale or client.Age == intervale %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.Nom }}</td>
                <td>{{ client.Prenom }}</td>
                <td>{{ client.Telephone }}</td>
                <td>{{ client.nomUtilisateur }}</td>
                <td>{{ client.motDePass }}</td>
                <td>{{ client.Age }}</td>
                <td>{{ client.Cni }}</td>
                <td>{{ client.PhotoIdentite }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-success">show</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning">edit</a>
                </td>
            </tr>
            
        
        {% endif %}
        
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}" class="btn btn-primary">Create new</a>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
{% endblock %}
